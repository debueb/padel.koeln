Resources:
  sslSecurityGroupIngress:
    Type: AWS::EC2::SecurityGroupIngress
    Properties:
      GroupId: {"Fn::GetAtt" : ["AWSEBSecurityGroup", "GroupId"]}
      IpProtocol: tcp
      ToPort: 443
      FromPort: 443
      CidrIp: 0.0.0.0/0

packages:
  yum:
    mod_ssl : []

container_commands:
  10_initpublickey:
    command: "sudo echo -----BEGIN CERTIFICATE----- >/etc/pki/tls/certs/server.crt"
  15_writepublickey:
    command: 'sudo echo ${SSL_PUBLIC_KEY} | tr " " "\n" >>/etc/pki/tls/certs/server.crt'
  20_finishpublickey:
    command: "sudo echo -----END CERTIFICATE----- >>/etc/pki/tls/certs/server.crt"
  25_modepublickey:
    command: "sudo chmod 000400 /etc/pki/tls/certs/server.crt"
  50_initprivatekey:
    command: "sudo echo -----BEGIN RSA PRIVATE KEY----- >/etc/pki/tls/certs/server.key"
  55_writeprivatekey:
    command: 'sudo echo ${SSL_PRIVATE_KEY} | tr " " "\n" >>/etc/pki/tls/certs/server.key'
  60_finishprivatekey:
    command: "sudo echo -----END RSA PRIVATE KEY----- >>/etc/pki/tls/certs/server.key"
  70_modeprivatekey:
    command: "sudo chmod 000400 /etc/pki/tls/certs/server.key"
  90_restarthttpd:
    command: "sudo service httpd restart || sudo service httpd start"